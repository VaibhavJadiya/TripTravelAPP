<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/days_count"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="DAY 1"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/place_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="â‚¹500"
        android:layout_margin="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/place_price"/>

    <ImageView
        android:id="@+id/days_pictures"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/days_count" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="DAY 1"
        android:id="@+id/days_place_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/days_pictures"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"/>



</androidx.constraintlayout.widget.ConstraintLayout>